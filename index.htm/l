<body>
  <h1>🎯 Game Tebak Angka</h1>
  <p>Masukkan angka dari 1 sampai 10!</p>
  <input type="number" id="guess" min="1" max="10">
  <button onclick="checkGuess()">Tebak!</button>
  <div id="result"></div>

  <script>
    let randomNumber = Math.floor(Math.random() * 10) + 1;

    function checkGuess() {
      const guess = Number(document.getElementById('guess').value);
      const result = document.getElementById('result');

      if (guess < 1 || guess > 10) {
        result.textContent = "⚠️ Masukkan angka antara 1-10!";
      } else if (guess === randomNumber) {
        result.textContent = "🎉 Benar! Angkanya " + randomNumber;
        randomNumber = Math.floor(Math.random() * 10) + 1; // reset
      } else {
        result.textContent = "❌ Salah! Coba lagi!";
      }
    }
  </script>
</body>
</html>
